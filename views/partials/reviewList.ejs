<h2><%= title %></h2>
<div class="row mb-2">
  <% if(!reviews || reviews.length === 0) { %>
    <b>登録された内容がありません</b>
  <% } else { %>
    <% for(let review of reviews) { %>
      <div class="col-12 col-md-6 mb-3">
        カテゴリー: <%= review.category %><br>
        質問：<%= review.question %>
        <button class="btn btn-outline-info rounded" type="button" data-bs-toggle="collapse" data-bs-target="#answer1-<%= review._id %>">
          答え
        </button>
        <div class="collapse border border-info p-2 rounded" id="answer1-<%= review._id %>">
          <%= review.answer %>
        </div>
      </div>        
    <% } %>
  <% } %>
</div>