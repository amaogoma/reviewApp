<%- include('../partials/head', {title: '今日の学習登録フォーム'}) %>
<body>
  <%- include('../partials/navbar') %>
  <main>
    <div class="container">
      <h1 class="my-5">今日の学習を登録</h1>
      <form action="/products" method="POST">
        <label for="category" class="form-label">カテゴリー</label>
        <input type="text" id="category" name="category" class="form-control form-control-lg" required>
        <br><br>
    
        <label for="question" class="form-label">質問</label>
        <textarea name="question" id="question" class="form-control form-control-lg" style="height: 10rem"></textarea>
        <br>
    
        <label for="answer" class="form-label">答え</label>
        <textarea name="answer" id="answer" class="form-control form-control-lg" style="height: 10rem"></textarea>
        <br>
        
        <button type="submit" class="btn btn-outline-info " style="--bs-btn-padding-x: 3rem">登録</button>
      </form>
      <br>
    </div>

</main>
  <%- include('../partials/footer') %>
</body>
</html>